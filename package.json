  "description": "Tool that can be used to build metal ES6 js files to AMD format",
  "license": "BSD",
  "repository": "metal/metal-tools-build-amd",
  "author": {
    "name": "Maira Bello",
    "email": "maira.araujo@liferay.com"
  },
  "engines": {
    "node": ">=0.12.0"
  },
